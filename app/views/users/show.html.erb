

<div class="container">
	
	<div class="row">
		<div class="col-xs-3 col-md-3">
			<%= render 'users/profile', user: @user %>
			<%= render 'books/sidebar', book: @book ,user:current_user%>
		</div>
		<div class="col-xs-9 col-md-9">
			<h3>Books</h3>
			<div class="colored">
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50" %></td>
							<td><%=link_to book.title,book_path(book.id) %></td>
							<td><%= book.body %></td>
							<%= render 'favorites/favorite', book: book %>
					<td>
								<span class="comment-count">コメント: <%= book.book_comments.count %></span>
							</td>
				<% end %>
			</table>
			</div>
		</div>
	</div>
</div>
