<div class ="container">
	<div class ="row">
		<div class="col-md-6 offset-md-3">
			<h1>Editing Book </h1>
			<%= form_with model:@book do |f| %>

				<h5>Title</h5>
				<%= f.text_field :title, class: "form-control" %>
				<h5>Opinion</h5>
				<%= f.text_area :opinion, class: "form-control" %>

				<button type= "submit" class="mt-3 btn btn-primary btn-block">
					update book
				</button>
			<% end %>
		</div>
	</div>
</div>

