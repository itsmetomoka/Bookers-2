<div class ="container">
	<div class ="row">
		<div class="col-xs-6 offset-xs-3 col-md-6 offset-md-3">
			<h1>Editing Book </h1>
			
			<%= form_for @book do |f| %>

        <% if @book.errors.any? %>
        <%= @book.errors.count %>errors
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
       <% end %>

				<h5>Title</h5>
				<%= f.text_field :title, class: "form-control" %>
				<h5>Opinion</h5>
				<%= f.text_area :body, class: "form-control" %>

				<button type= "submit" class="mt-3 btn btn-primary btn-block">
					Update Book
				</button>
				<div class="colored">
					<%= link_to "Show", book_path(@book.id) %>|
					<%= link_to "Back", books_path %>
				</div>
			<% end %>
		</div>
	</div>
</div>

