<div class= "container">
	<% if @book.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

	      <ul>
	        <% @book.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>


	<div class ="row">
		<div class="col-md-3">
			<%= render 'users/profile', user: current_user %>
			<%= render 'books/sidebar', book: @book %>
		</div>
		<div class="col-md-9">
			<h3>Books</h3>
				<div class="colored">
				<table class="table table-hover">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<% @books.each do |book| %>
							<td><%= link_to user_path(book.user_id) do %>
							<%=attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50" %>
							<% end %>
							</td>
							<td><%=link_to book.title,book_path(book.id) %></td>
							<td><%= book.opinion %></td>
							</tr>
					<% end %>
				</table>
				</div>
		</div>
	</div>
</div>

